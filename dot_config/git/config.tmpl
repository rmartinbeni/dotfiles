[alias]
	a = add
	amend = commit --amend
	delete = branch -d
	devel = switch develop
	cm = commit
	master = switch master
	prune = fetch --prune
	p = pull
	rs = reset --soft HEAD~1
	s = status
	sw = switch

[branch]
	sort = -committerdate

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = cyan

[color "diff"]
	meta = blue bold
	frag = yellow
	old = red bold
	new = green bold
	whitespace = red reverse

[color "interactive"]
	prompt = cyan bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[column]
  ui = auto column dense

[commit]
{{- if .git_gpgkey }}
	gpgsign = true
{{- end }}

[help]
	autocorrect = 20

[user]
	name = {{ .git_name }}
	email = {{ .git_email }}
{{- if .git_gpgkey }}
	signingkey = {{ .git_gpgkey }}
{{- end }}
